function task1_module_schema() {
    $schema['register_form'] = [
        'fields' => [
            'id' => [
                'type' => 'serial',
                'not null' => TRUE,
            ],
            'name' => [
                'type' => 'varchar',
                'length' => 255,
            ],
            'email' => [
                'type' => 'varchar',
                'length' => 255
            ],
            'password' => [
                'type' => 'varchar',
                'length' => 500
            ],
            'role' => [
                'type' => 'varchar',
                'length' => 255
            ]
            ],
        'primary key' => ['id'],
    ];

    return $schema;
}

